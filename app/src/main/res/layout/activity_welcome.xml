<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <EditText
        android:id="@+id/user_text_input"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_elevation"
        android:hint="Enter Message to Encrypt.."
        android:inputType="text" />
    <Button
        android:id="@+id/decrypt_button"
        style="@android:style/Widget.Material.Button.Colored"
        android:layout_width="346dp"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="@dimen/default_margin_small"
        android:layout_marginEnd="@dimen/default_margin_end"
        android:text="Decrypt Seed"
        android:textColor="?android:attr/textColorPrimaryInverse"
        />
    <Button
        android:id="@+id/encrypt_button"
        style="@android:style/Widget.Material.Button.Colored"
        android:layout_width="346dp"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="@dimen/default_margin_small"
        android:layout_marginEnd="@dimen/default_margin_end"
        android:text="Encrypt Seed"
        android:textColor="?android:attr/textColorPrimaryInverse"
        />
    <TextView
        android:id="@+id/encrypted_message"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/default_elevation"
        android:text="Cipher or Plain"
        android:layout_margin="@dimen/default_elevation"
        android:textSize="24sp" />
    <com.google.android.gms.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>